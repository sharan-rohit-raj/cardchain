<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/weatherDia"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:background="#000000"
    tools:context=".WeatherDialog">

    <ImageView
        android:id="@+id/timePic"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/afternoon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/greeting"
        android:layout_width="310dp"
        android:layout_height="41dp"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:gravity="center"
        android:text="Good Afternoon"
        android:textColor="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/timePic"
        app:layout_constraintEnd_toEndOf="@+id/timePic"
        app:layout_constraintStart_toStartOf="@+id/timePic" />

    <TextView
        android:id="@+id/currentWeather"
        android:layout_width="415dp"
        android:layout_height="36dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Cloudy"
        android:textColor="#A5A5A5"
        android:textColorLink="#6E6E6E"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timePic" />

    <TextView
        android:id="@+id/highLow"
        android:layout_width="211dp"
        android:layout_height="31dp"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="130dp"
        android:gravity="center"
        android:text="H: 6°  L: 3°"
        android:textColor="#A5A5A5"
        android:textColorLink="#6E6E6E"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timePic" />

    <TextView
        android:id="@+id/currentTempreture"
        android:layout_width="108dp"
        android:layout_height="80dp"
        android:layout_marginEnd="150dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:text="6°"
        android:textColor="#DFDFDF"
        android:textColorLink="#6E6E6E"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timePic" />

</androidx.constraintlayout.widget.ConstraintLayout>