<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/weatherDia"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="450dp"
    app:cardCornerRadius="25dp"
    tools:context=".WeatherDialog">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">

        <ImageView
            android:id="@+id/timePic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/evening"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/greeting"
            android:layout_width="310dp"
            android:layout_height="41dp"
            android:fontFamily="@font/roboto"
            android:text="Good Afternoon"
            android:textColor="#FFFFFF"
            android:textColorLink="#000000"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/timePic"
            app:layout_constraintHorizontal_bias="0.247"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.442" />

        <TextView
            android:id="@+id/currentTempreture"
            android:layout_width="108dp"
            android:layout_height="80dp"
            android:text="6°"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textColorLink="#6E6E6E"
            android:textSize="60sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.082"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.654" />

        <TextView
            android:id="@+id/highLow"
            android:layout_width="211dp"
            android:layout_height="31dp"
            android:text="H: 6°  L: 3°"
            android:textColor="#FFFFFF"
            android:textColorLink="#6E6E6E"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/timePic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.125"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.813" />

        <TextView
            android:id="@+id/currentWeather"
            android:layout_width="415dp"
            android:layout_height="36dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="Cloudy"
            android:textColor="#A5A5A5"
            android:textColorLink="#6E6E6E"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/timePic" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>